  theme(axis.title.x = element_text(vjust=-5), axis.title.y = element_text(vjust=5), 
        plot.margin = margin(1.4, 1.4, 2, 1.4, "cm"), 
        axis.text=element_text(size=36),
        axis.title=element_text(size=36)) 

c1



